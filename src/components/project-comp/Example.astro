---
const {
    projectName,
    projectGif,
    projectText,
    projectTech,
    projectLink,

} = Astro.props

import { Image } from "astro:assets";

// import { SiOpenproject } from 'react-icons/si'
---

<a href={projectLink} target="_blank" class="lg:flex hidden w-5/6 gap-12 h-full hover:bg-box-shade hover:cursor-pointer rounded-md">
   
    <div class="flex flex-col gap-1 w-1/3">
        <div class="w-full h-1/6">
            <p class="w-full h-full text-light-shade text-center text-xl font-semibold">
                {projectName}
            </p>
        </div>
        <div>
            <Image 
            src={projectGif} 
            alt='tetris.gif'
            class="w-full h-full" />
        </div> 
    </div>
   
    <div class="flex flex-col gap-2 w-2/3">
        <div class="h-5/6">
            <p class="text-neon-shade text-lg flex w-full h-full">
                {projectText}
            </p>
        </div>

        <div class="h-1/6 flex justify-center p-3">
            <p class="text-light-shade flex justify-center items-end w-5/6">
                {projectTech}
            </p>
            <div class="w-1/6 flex flex-row-reverse justify-between items-end">
                <div class="text-light-shade text-2xl">
                   
                </div>
            </div>
        </div>
    </div>
</a>




<a href={projectLink} target="_blank" class="flex flex-col lg:hidden w-full gap-2 h-full bg-box-shade rounded-md p-3">
   
    <div class="w-full h-fit flex">
        <p class="w-full h-full text-light-shade text-center text-lg font-semibold">
            {projectName}
        </p>
        <figure class="text-light-shade">
            
        </figure>
    </div>

    <div class="h-fit">
        <p class="text-neon-shade text-sm flex w-full h-full">
            {projectText}
        </p>
    </div>

    <div>
        <Image 
        src={projectGif} 
        alt='tetris.gif'
        class="w-full h-fit" />
    </div> 
   
    <div class="h-fit flex justify-center p-1">
        <p class="text-light-shade text-sm flex justify-center items-end w-5/6">
            {projectTech}
        </p>
    </div>
</a>

